{
  "name": "shared-ui",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/client/ui/src",
  "prefix": "ui",
  "projectType": "library",
  "tags": ["domain:client", "type:feature"],
  "targets": {
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/client/ui/jest.config.ts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "storybook": {
      "executor": "@storybook/angular:start-storybook",
      "options": {
        "port": 4400,
        "configDir": "libs/client/ui/.storybook",
        "browserTarget": "shared-ui:build-storybook",
        "compodoc": true,
        "compodocArgs": ["-e", "json", "-d", "libs/client/ui/.storybook"],
        "stylePreprocessorOptions": {
          "includePaths": ["apps/dnd-cards/public", "libs/tokens/out/dnd-cards"]
        },
        "assets": [
          {
            "glob": "**/*",
            "input": "apps/dnd-cards/public",
            "output": ""
          }
        ],
        "styles": [
          "apps/dnd-cards/src/styles.scss",
          "node_modules/bootstrap/scss/bootstrap.scss",
          "node_modules/bootstrap-icons/font/bootstrap-icons.scss"
        ]
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@storybook/angular:build-storybook",
      "outputs": ["{options.outputDir}"],
      "options": {
        "outputDir": "dist/storybook/shared-ui",
        "configDir": "libs/client/ui/.storybook",
        "browserTarget": "shared-ui:build-storybook",
        "compodoc": true,
        "compodocArgs": ["-e", "json", "-d", "libs/client/ui/.storybook"],
        "stylePreprocessorOptions": {
          "includePaths": ["apps/dnd-cards/public", "libs/tokens/out/dnd-cards"]
        },
        "assets": [
          {
            "glob": "**/*",
            "input": "apps/dnd-cards/public",
            "output": ""
          }
        ],
        "styles": [
          "apps/dnd-cards/src/styles.scss",
          "node_modules/bootstrap/scss/bootstrap.scss",
          "node_modules/bootstrap-icons/font/bootstrap-icons.scss"
        ]
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "test-storybook": {
      "executor": "nx:run-commands",
      "options": {
        "command": "test-storybook -c libs/client/ui/.storybook --url=http://localhost:4400"
      }
    },
    "static-storybook": {
      "executor": "@nx/web:file-server",
      "dependsOn": ["build-storybook"],
      "options": {
        "buildTarget": "shared-ui:build-storybook",
        "staticFilePath": "dist/storybook/shared-ui",
        "spa": true
      },
      "configurations": {
        "ci": {
          "buildTarget": "shared-ui:build-storybook:ci"
        }
      }
    }
  }
}
