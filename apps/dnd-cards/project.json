{
  "name": "dnd-cards",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "apps/dnd-cards/src",
  "tags": ["domain:client"],
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:browser",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/dnd-cards/browser",
        "index": "apps/dnd-cards/src/index.html",
        "main": "apps/dnd-cards/src/main.ts",
        "tsConfig": "apps/dnd-cards/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "stylePreprocessorOptions": {
          "includePaths": ["apps/dnd-cards/public"]
        },
        "assets": [
          {
            "glob": "**/*",
            "input": "apps/dnd-cards/public"
          }
        ],
        "styles": ["apps/dnd-cards/src/styles.scss"],
        "scripts": []
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "1mb",
              "maximumError": "2mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "extractLicenses": false,
          "optimization": false,
          "sourceMap": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "options": {
        "proxyConfig": "proxy.conf.json"
      },
      "executor": "@angular-devkit/build-angular:dev-server",
      "configurations": {
        "production": {
          "buildTarget": "dnd-cards:build:production"
        },
        "development": {
          "buildTarget": "dnd-cards:build:development"
        }
      },
      "defaultConfiguration": "development",
      "continuous": true
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "buildTarget": "dnd-cards:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/dnd-cards/jest.config.ts"
      }
    },
    "serve-static": {
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "dnd-cards:build",
        "port": 4200,
        "spa": true
      }
    },
    "server": {
      "dependsOn": ["build"],
      "executor": "@angular-devkit/build-angular:server",
      "options": {
        "outputPath": "dist/apps/dnd-cards/server",
        "main": "apps/dnd-cards/server.ts",
        "tsConfig": "apps/dnd-cards/tsconfig.server.json",
        "inlineStyleLanguage": "scss"
      },
      "configurations": {
        "production": {
          "outputHashing": "media"
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "sourceMap": true,
          "extractLicenses": false,
          "vendorChunk": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve-ssr": {
      "executor": "@angular-devkit/build-angular:ssr-dev-server",
      "configurations": {
        "development": {
          "browserTarget": "dnd-cards:build:development",
          "serverTarget": "dnd-cards:server:development"
        },
        "production": {
          "browserTarget": "dnd-cards:build:production",
          "serverTarget": "dnd-cards:server:production"
        }
      },
      "defaultConfiguration": "development",
      "continuous": true
    },
    "prerender": {
      "executor": "@angular-devkit/build-angular:prerender",
      "options": {
        "routes": ["/"]
      },
      "configurations": {
        "development": {
          "browserTarget": "dnd-cards:build:development",
          "serverTarget": "dnd-cards:server:development"
        },
        "production": {
          "browserTarget": "dnd-cards:build:production",
          "serverTarget": "dnd-cards:server:production"
        }
      },
      "defaultConfiguration": "production"
    },
    "docker-build": {
      "dependsOn": ["build"],
      "command": "docker build -f apps/dnd-cards/Dockerfile . -t dnd-cards"
    }
  }
}
